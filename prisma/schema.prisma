datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  middleName    String?
  birthDate     DateTime
  email         String   @unique
  password_hash String
  access_level  Int
  unique_code   String   @unique
}


model Medics {
  id          Int     @id @default(autoincrement())
  cid    Int
  prof  String
  MfirstName     String
  MlastName      String
  MmiddleName    String
  MbirthDate     DateTime
}

model Hospital {
  id          Int     @id @default(autoincrement())
  name        String
  licens      String  @unique
  address     String
  email       String   @unique
  password_hash String
  cord_address String
  type        Int
  time      String
  htime      String
  phone     String
}


